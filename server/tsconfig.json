  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",                     
    "watch": true,
    "lib": ["es6"],
    "outDir": "./build",                        
    "rootDir": "./server",   
    "noImplicitThis": true, 
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true        
